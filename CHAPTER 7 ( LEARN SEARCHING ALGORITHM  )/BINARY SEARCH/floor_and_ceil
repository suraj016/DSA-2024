public class BinarySearch {

    // Function to find the floor of the target element in a sorted array
    public static int floor(int[] arr, int target) {
        int low = 0, high = arr.length - 1;
        int floorValue = -1;  // Initialize to -1, indicating not found

        while (low <= high) {
            int mid = low + (high - low) / 2;
            
            if (arr[mid] == target) {
                return arr[mid];  // Exact match
            }
            else if (arr[mid] < target) {
                floorValue = arr[mid];  // This could be the floor, as we need the largest number less than or equal to target
                low = mid + 1;  // Move right to find a larger floor
            } else {
                high = mid - 1;  // Move left as we need a smaller number
            }
        }
        return floorValue;  // Return the largest number less than or equal to target
    }

    // Function to find the ceil of the target element in a sorted array
    public static int ceil(int[] arr, int target) {
        int low = 0, high = arr.length - 1;
        int ceilValue = -1;  // Initialize to -1, indicating not found

        while (low <= high) {
            int mid = low + (high - low) / 2;
            
            if (arr[mid] == target) {
                return arr[mid];  // Exact match
            }
            else if (arr[mid] > target) {
                ceilValue = arr[mid];  // This could be the ceil, as we need the smallest number greater than or equal to target
                high = mid - 1;  // Move left to find a smaller ceil
            } else {
                low = mid + 1;  // Move right as we need a larger number
            }
        }
        return ceilValue;  // Return the smallest number greater than or equal to target
    }

    public static void main(String[] args) {
        int[] arr = {1, 3, 5, 6, 8, 10};
        int target = 7;

        // Find Floor
        int floorResult = floor(arr, target);
        System.out.println("Floor of " + target + " is: " + floorResult);

        // Find Ceil
        int ceilResult = ceil(arr, target);
        System.out.println("Ceil of " + target + " is: " + ceilResult);
    }
}


arr[low] = ceil;
arr[hi] = floor;